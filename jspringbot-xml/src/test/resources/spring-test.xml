<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <description>jSpringBot XML Keywords</description>

  <import resource="classpath:spring/spring-expression.xml"/>
  <import resource="classpath:spring/spring-xml.xml"/>

  <bean name="sampleResources" class="org.jspringbot.keyword.xml.SampleResources">
    <property name="sampleXML" value="classpath:sample.xml"/>
    <property name="sample2XML" value="classpath:sample2.xml"/>
  </bean>
</beans>

